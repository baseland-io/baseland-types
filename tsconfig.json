{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["src/**/*.ts"]
}
